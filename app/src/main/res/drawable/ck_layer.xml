<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:drawable="@drawable/ck_false"/>
    <item>
        <selector>
            <item android:state_checked="true" >
                <shape>
                    <corners android:radius="5dp"/>
                    <solid android:color="#2395ff"/>
                    <stroke android:width="1px" android:color="#2395ff"/>
                </shape>
            </item>
            <item android:state_checked="false" >
                <shape>
                    <corners android:radius="5dp"/>
                    <solid android:color="#00000000"/>
                    <stroke android:width="1px" android:color="#dddddd"/>
                    <padding android:left="80dp"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>