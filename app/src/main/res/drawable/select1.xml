<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_checked="false">
                <bitmap android:src="@drawable/ck_false" android:tileMode="disabled" android:gravity="center"></bitmap>
            </item>

            <item android:state_checked="true">
                <bitmap android:src="@drawable/ck_true" android:tileMode="disabled" android:gravity="center"></bitmap>
            </item>
        </selector>
    </item>
</layer-list>